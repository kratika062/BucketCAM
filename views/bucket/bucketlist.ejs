<% bucketlist.forEach(function(bucketlist){ %>
      <div class="ui vertical segment">
        <div class="ui stackable grid">
          <div class="six wide column">
            <img
              class="ui image"
              src="<%=bucketlist.image%>"
            />
          </div>
          <div class="ten wide column">
            <h1 class="ui header">
              <a href="/bucketlist/<%=bucketlist._id%>"><%= bucketlist.name%></a> <br>
			</h1>	
				<span class="sub"><%=bucketlist.created.toDateString()%></span>
				
			  
            <p>
              <%=bucketlist.Description .substring(0,40)%>.......
           <br>
			<br>		
			<a class="ui floated basic violet button" href="/bucketlist/<%=bucketlist._id%>">
				Read More 
				<i class="right chevron icon"></i>
			</a>	 
			  </p>
          </div>
        </div>
      </div>
	<%})%>
			
    <% if (pages && pages > 0) { %>
    <div class="ui pagination menu" style="margin-top:80px; margin-left:400px;">
        <% if (current == 1) { %>
        <div class="disabled item"><a>First</a></div>
        <% } else { %>
        <a class="active item" href="/bucketlist<%if(search){%>?search=<%=search%><%}%>">First</a>
        <% } %>
 
        <% if (current == 1) { %>
        <div class="disabled item"><a>«</a></div>
        <% } else { %>
        <a class="active item" href="/bucketlist?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <div class=""><a>...</a></div>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
		<div class="disabled item"><a><%= i %></a></div>
        <% } else { %>
        <a class="active item" href="/bucketlist?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <div class="disabled item"><a>...</a></div>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <div class="disabled item"><a>»</a></div>
        <% } else { %>
        <a class="active item"href="/bucketlist?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a>
        <% } %>
 
        <% if (current == pages) { %>
        <div class="disabled item"><a>Last</a>
        <% } else { %>
        <a class="active item" href="/bucketlist?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a>
        <% } %>
    </div>
    <% } %>
